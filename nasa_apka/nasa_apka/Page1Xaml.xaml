<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="nasa_apka.Page1Xaml"
			 Title="Úvod">
    <ContentPage.Content>
        <StackLayout>

            <Label
             Grid.Row="1"
            Text="Suhlasíte, že Vás to môže omylom zabiť?"/>
            <Button x:Name="button"
                    Text="Súhlasím"
                    TextColor="White"
                    BackgroundColor="Black"
                    BorderColor="Blue"
                    BorderWidth="3"
                    BorderRadius="6"
                    Clicked="OnNextPageButtonClicked"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    ImageSource="like.png"/>
            <Button x:Name="exit"
                    Text="Nesúhlasím"
                    TextColor="White"
                    BackgroundColor="Black"
                    BorderColor="Red"
                    BorderWidth="3"
                    BorderRadius="6"
                    Clicked="ExitApp"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Center"
                    ImageSource="dislike.png"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>